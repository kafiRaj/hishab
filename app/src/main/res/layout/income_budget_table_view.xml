<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="1dp"
    android:backgroundTint="#F5F5F5"
    >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <!-- Name Column -->
            <TextView
                android:id="@+id/tv_month_name"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="4"
                android:text="জানুয়ারী ২০২৪"
                android:textStyle="bold"
                android:textColor="#070707"
                android:textSize="14sp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"/>



            <!-- Comments Column -->
            <TextView
                android:id="@+id/tv_budget_amount"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="2"
                android:text="পরিমাণ (টাকা)"
                android:textStyle="bold"
                android:textColor="#070707"
                android:textSize="14sp"
                android:gravity="right|center_vertical"
                android:paddingRight="10dp"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="15dp"
                android:gravity="center_horizontal"
                android:background="@drawable/edit_text_border_optional">

                <!-- Icon -->
                <ImageView
                    android:id="@+id/ib_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Icon representing the button action"
                    app:tint="#F44336"
                    />

            </LinearLayout>

        </LinearLayout>





</androidx.cardview.widget.CardView>